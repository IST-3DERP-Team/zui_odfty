<mvc:View controllerName="zuiodfty.controller.DeliveryInfo"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    height="100%">

    <Page id="page" enableScrolling="false" class="sapUiNoContentPadding" showHeader="false">
        <content>
            <VBox id="vbMain" fitContainer="true">
                <Toolbar id="TB1" style="Clear">
                    <ToolbarSpacer />
                    <Button id="btnEditHdr" type="Ghost" icon="sap-icon://edit" press="onEditHdr" visible="true"/>
                    <Button id="btnDeleteHdr" type="Ghost" icon="sap-icon://delete" press="onDeleteHdr" visible="true"/> 
                    <MenuButton id="mbtnSetStatusHdr" type="Ghost" icon="sap-icon://settings" visible="true">
                        <menu>
                            <Menu id="menuSetStatusHdr">
                                <MenuItem id="menuPickHdr" text="{caption>/PICK_COMPLETE}" press="onPickHdr" />
                                <MenuItem id="menuPostHdr" text="{caption>/POST}" press="onPostHdr" />
                                <MenuItem id="menuUndoPickHdr" text="{caption>/UNDO_PICK_COMPLETE}" press="onUndoPickHdr" />
                            </Menu>
                        </menu>
                    </MenuButton>
                    <Button id="btnRefreshHdr" type="Ghost" icon="sap-icon://refresh" press="onRefreshHdr" visible="true"/> 
                    <Button id="btnPrintHdr" type="Ghost" icon="sap-icon://print" press="onPrintHdr" visible="true"/> 
                    <Button id="btnCloseHdr" type="Ghost" icon="sap-icon://sys-cancel" press="onCloseHdr" visible="true"/> 
                    <Button id="btnSaveHdr" type="Ghost" icon="sap-icon://save" press="onSaveHdr" visible="false"/> 
                    <Button id="btnCancelHdr" type="Ghost" icon="sap-icon://sys-cancel" press="onCancelHdr" visible="false"/> 
                </Toolbar>
                    <f:Form id="frmHeader" editable="true" class="sapUiNoContentPadding" width="100%">
                        <f:layout>
                            <f:ResponsiveGridLayout columnsL="4" singleContainerFullSize="false" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                                <f:formElements>
                                    <f:FormElement label="{caption>/DLVNO}">  
                                        <f:fields>
                                            <Input id="iptDlvNo" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/MVTTYPE}">  
                                        <f:fields>
                                            <Input id="iptMvtType" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/STATUS}">  
                                        <f:fields>
                                            <Input id="iptStatus" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="feDocDt" label="{caption>/DOCDT}">  
                                        <f:fields>
                                            <DatePicker
                                                id="dpDocDt"
                                                editable="{ui>/editModeHdr}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="feReqDt" label="{caption>/REQDT}">  
                                        <f:fields>
                                            <Input id="iptReqDt" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer ariaLabelledBy="Grp2" class="sapUiNoContentPadding" >
                                <f:formElements>
                                    <f:FormElement label="{caption>/WAREHOUSE}">  
                                        <f:fields>
                                            <Input id="iptWarehouse" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/ISSPLANT}">  
                                        <f:fields>
                                            <Input id="iptIssPlant" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/ISSSLOC}">  
                                        <f:fields>
                                            <Input id="iptIssSloc" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/RCVPLANT}">  
                                        <f:fields>
                                            <Input id="iptRcvPlant" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/RCVSLOC}">  
                                        <f:fields>
                                            <Input id="iptRcvSloc" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer ariaLabelledBy="Grp3" class="sapUiNoContentPadding" >
                                <f:formElements>
                                    <f:FormElement label="{caption>/POSTDT}">  
                                        <f:fields>
                                            <DatePicker
                                                id="dpPostDt"
                                                editable="{ui>/editModeHdr}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/ACTISSDT}">  
                                        <f:fields>
                                            <DatePicker
                                                id="dpActIssDt"
                                                editable="{ui>/editModeHdr}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/REFDOCNO}">  
                                        <f:fields>
                                            <Input id="iptRefDocNo" editable="{ui>/editModeHdr}" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/REFDOCDT}">  
                                        <f:fields>
                                            <DatePicker
                                                id="dpRefDocDt"
                                                editable="{ui>/editModeHdr}"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/HDRTEXT}">  
                                        <f:fields>
                                            <Input id="iptHdrText" editable="{ui>/editModeHdr}" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer ariaLabelledBy="Grp4" class="sapUiNoContentPadding" >
                                <f:formElements>
                                    <f:FormElement label="{caption>/DELETED}">  
                                        <f:fields>
                                            <CheckBox 
                                                id="chkDeleted"
                                                editable="false"/>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/CREATEDBY}">  
                                        <f:fields>
                                            <Input id="iptCreatedBy" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/CREATEDDT}">  
                                        <f:fields>
                                            <Input id="iptCreatedDt" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/UPDATEDBY}">  
                                        <f:fields>
                                            <Input id="iptUpdatedBy" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{caption>/UPDATEDDT}">  
                                        <f:fields>
                                            <Input id="iptUpdatedDt" editable="false" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>

                        </f:formContainers>
                    </f:Form>
                        
                    <IconTabBar id="itbDetails" 
                        headerMode="Inline"
                        expanded="{device>/isNoPhone}" 
                        expandable="false" 
                        class="sapUiNoContentPadding" 
                        stretchContentHeight="true" 
                        applyContentPadding="false"
                        select="onSelectTab">
                        <items>
                            <IconTabFilter id="itfHU" text="DELIVERY DETAILS (HU)" key="hu">
                                <uiT:Table id="huTab"
                                    rows="{hu>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="MultiToggle"
                                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                                    cellClick="onCellClick"
                                    sort="onSorted"
                                    filter="onFilter"
                                    columnFreeze="onColumnUpdated"
                                    columnMove="onColumnUpdated"
                                    columnResize="onColumnUpdated"
                                    columnSelect="onColumnUpdated"
                                    columnVisibility="onColumnUpdated"
                                    rowSelectionChange="onRowSelectionChange">
                                    <uiT:extension>
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnEditHu" 
                                                icon="sap-icon://edit"
                                                press="onEditHu"
                                                visible="true"/>
                                            <Button id="btnDeleteHu" 
                                                icon="sap-icon://delete"
                                                press="onDeleteHu" 
                                                visible="true" />
                                            <Button id="btnRefreshHu" 
                                                icon="sap-icon://refresh"
                                                press="onRefreshHu" 
                                                visible="true" />
                                            <Button id="btnSaveHu" 
                                                icon="sap-icon://save"
                                                press="onSaveHu" 
                                                visible="false" />
                                            <Button id="btnCancelHu" 
                                                icon="sap-icon://sys-cancel"
                                                press="onCancelHu" 
                                                visible="false" />
                                        </Toolbar>
                                    </uiT:extension>
                                    <uiT:layoutData>
                                        <FlexItemData growFactor="1" baseSize="0%"/>
                                    </uiT:layoutData>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter id="itfDtl" text="DELIVERY DETAILS" key="dtl">
                                <uiT:Table id="dtlTab"
                                    rows="{dtl>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="MultiToggle"
                                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                                    cellClick="onCellClick"
                                    sort="onSorted"
                                    filter="onFilter"
                                    columnFreeze="onColumnUpdated"
                                    columnMove="onColumnUpdated"
                                    columnResize="onColumnUpdated"
                                    columnSelect="onColumnUpdated"
                                    columnVisibility="onColumnUpdated"
                                    rowSelectionChange="onRowSelectionChange">
                                    <uiT:extension>
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnAddDtl" 
                                                icon="sap-icon://add"
                                                press="onAddDtl"
                                                visible="true"/>
                                            <Button id="btnPickDtl" 
                                                icon="sap-icon://flag"
                                                press="onPickDtl" 
                                                visible="true" />
                                            <Button id="btnDeleteDtl" 
                                                icon="sap-icon://delete"
                                                press="onDeleteDtl" 
                                                visible="true" />
                                            <Button id="btnRefreshDtl" 
                                                icon="sap-icon://refresh"
                                                press="onRefreshDtl" 
                                                visible="true" />
                                        </Toolbar>
                                    </uiT:extension>
                                    <uiT:layoutData>
                                        <FlexItemData growFactor="1" baseSize="0%"/>
                                    </uiT:layoutData>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter id="itfShip" text="SHIPMENT INFO" key="ship">
                                <uiT:Table id="shipTab"
                                    rows="{ship>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                                    cellClick="onCellClick"
                                    sort="onSorted"
                                    filter="onFilter"
                                    columnFreeze="onColumnUpdated"
                                    columnMove="onColumnUpdated"
                                    columnResize="onColumnUpdated"
                                    columnSelect="onColumnUpdated"
                                    columnVisibility="onColumnUpdated"
                                    rowSelectionChange="onRowSelectionChange">
                                    <uiT:extension>
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnEditShip" 
                                                icon="sap-icon://edit"
                                                press="onEditShip"
                                                visible="true"/>
                                            <Button id="btnRefreshShip" 
                                                icon="sap-icon://refresh"
                                                press="onRefreshShip" 
                                                visible="true" />
                                            <Button id="btnSaveShip" 
                                                icon="sap-icon://save"
                                                press="onSaveShip" 
                                                visible="false" />
                                            <Button id="btnCancelShip" 
                                                icon="sap-icon://sys-cancel"
                                                press="onCancelShip" 
                                                visible="false" />
                                        </Toolbar>
                                    </uiT:extension>
                                    <uiT:layoutData>
                                        <FlexItemData growFactor="1" baseSize="0%"/>
                                    </uiT:layoutData>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter id="itfStat" text="STATUS OVERVIEW" key="stat">
                                <uiT:Table id="statTab"
                                    rows="{stat>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                                    cellClick="onCellClick"
                                    sort="onSorted"
                                    filter="onFilter"
                                    columnFreeze="onColumnUpdated"
                                    columnMove="onColumnUpdated"
                                    columnResize="onColumnUpdated"
                                    columnSelect="onColumnUpdated"
                                    columnVisibility="onColumnUpdated"
                                    rowSelectionChange="onRowSelectionChange">
                                    <uiT:extension>
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnRefreshStat" 
                                                icon="sap-icon://refresh"
                                                press="onRefreshStat" 
                                                visible="true" />
                                        </Toolbar>
                                    </uiT:extension>
                                    <uiT:layoutData>
                                        <FlexItemData growFactor="1" baseSize="0%"/>
                                    </uiT:layoutData>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter id="itfMatDoc" text="MATERIAL DOCUMENTS" key="matDoc">
                                <uiT:Table id="matDocTab"
                                    rows="{matDoc>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                                    cellClick="onCellClick"
                                    sort="onSorted"
                                    filter="onFilter"
                                    columnFreeze="onColumnUpdated"
                                    columnMove="onColumnUpdated"
                                    columnResize="onColumnUpdated"
                                    columnSelect="onColumnUpdated"
                                    columnVisibility="onColumnUpdated"
                                    rowSelectionChange="onRowSelectionChange">
                                    <uiT:extension>
                                        <Toolbar>
                                            <ToolbarSpacer/>
                                            <Button id="btnRefreshMatDoc" 
                                                icon="sap-icon://refresh"
                                                press="onRefreshMatDoc" 
                                                visible="true" />
                                        </Toolbar>
                                    </uiT:extension>
                                    <uiT:layoutData>
                                        <FlexItemData growFactor="1" baseSize="0%"/>
                                    </uiT:layoutData>
                                </uiT:Table>
                            </IconTabFilter>
                        </items>
                        <layoutData>
                            <FlexItemData growFactor="1" baseSize="0%"/>
                        </layoutData>
                    </IconTabBar>
            </VBox>
        </content>
    </Page>
</mvc:View>